targets:

  # OpenMediaVault
  minimal-cli-stable-debian-omv:
    enabled: yes
    configs: [ armbian-apps ]
    pipeline:
      gha: *armbian-gha
      build-image: "yes"
    vars:
      RELEASE: bookworm
      BUILD_MINIMAL: "yes"
      BUILD_DESKTOP: "no"
      ENABLE_EXTENSIONS: "omv"
      NETWORKING_STACK: "systemd-networkd"
    items:
      - *omv

  # Home assistant
  minimal-cli-stable-debian-ha:
    enabled: yes
    configs: [ armbian-apps ]
    pipeline:
      gha: *armbian-gha
      build-image: "yes"
    vars:
      RELEASE: bookworm
      BUILD_MINIMAL: "yes"
      BUILD_DESKTOP: "no"
      ENABLE_EXTENSIONS: "ha"
      NETWORKING_STACK: "network-manager"
    items:
      - *home-assistant

  # OpenHab
  cli-stable-debian-oh:
    enabled: yes
    configs: [ armbian-apps ]
    pipeline:
      gha: *armbian-gha
      build-image: "yes"
    vars:
      RELEASE: bookworm
      BUILD_MINIMAL: "no"
      BUILD_DESKTOP: "no"
      ENABLE_EXTENSIONS: "openhab"
    items:
      - *openhab

  # Armbian security
  cli-unstable-debian-kali:
    enabled: yes
    configs: [ armbian-apps ]
    pipeline:
      gha: *armbian-gha
      build-image: "yes"
    vars:
      RELEASE: trixie
      BUILD_MINIMAL: "no"
      BUILD_DESKTOP: "no"
      ENABLE_EXTENSIONS: "kali"
    items:
      - *armbian-security
